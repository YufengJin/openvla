{
  "name": "OpenVLA-OFT",
  "dockerComposeFile": "../docker/docker-compose.headless.yaml",
  "service": "openvla-dev",
  "workspaceFolder": "/workspace/openvla-oft",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/openvla_env/bin/python"
      }
    }
  },

  "postCreateCommand": "echo 'Dev container ready.'",
  "remoteUser": "root"
}
